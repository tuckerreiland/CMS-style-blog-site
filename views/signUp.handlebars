<div class="flex flex-col items-start min-h-screen">
  <textarea rows="1" cols="50" type="text" placeholder="username..." id="create-user-username" class="placeholder:italic placeholder:text-sky-400 bg-zinc-900 px-3 py-2 rounded-md text-xl font-thin focus:outline-none tracking-wider caret-sky-400 text-white"></textarea>
  <textarea rows="1" cols="50" type="email" placeholder="email..." id="create-user-email" class="placeholder:italic placeholder:text-sky-400 bg-zinc-900 px-3 py-2 rounded-md text-xl font-thin focus:outline-none tracking-wider caret-sky-400 text-white"></textarea>
  <input rows="1" cols="50" type="password" placeholder="password... (8 char min)" id="create-user-password" class="w-80 placeholder:italic placeholder:text-sky-400 bg-zinc-900 px-3 py-2 rounded-md text-xl font-thin focus:outline-none tracking-wider caret-sky-400 text-white">
  {{#if errorMessage}}
    <h1 id='password-error' class="hidden bg-zinc-900 px-3 py-2 rounded-md text-xl font-thin tracking-wider text-red-700">password must be 8 characters long.</h1>
  {{/if}}
  <button id="create-user-button" class=" text-white bg-zinc-900  hover:text-sky-400 hover:outline-1 hover:outline hover:outline-sky-400 px-3 py-2 whitespace-nowrap rounded-md text-xl tracking-wide font-bold">Create ></button>
</div>
<script src="public/js/postUser.js"></script>